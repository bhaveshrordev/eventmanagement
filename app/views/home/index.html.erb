<div class="d-flex container">
  <div class="p-2 flex-grow-1"><h1 class="mb-4 text-primary">Events</h1></div>

  <% if clerk_signed_in? %>
    <div class="p-2"><a href="https://humane-tortoise-24.accounts.dev/user" class="btn btn-secondary">Manage Account</a></div>
  <% else %>
    <div class="p-2"><a href="/sign_in" class="btn btn-primary">Login</a></div>
  <% end %>
</div>

<div class="container"> 
  <div class="d-flex justify-content-center">
    <%== @pagy.series_nav(:bootstrap) %>
  </div>
</div>


<div class="container mt-4">
  <div class="row row-cols-1 row-cols-md-3 g-4">

    <% @events.each do |event| %>
      <div class="col">
        <div class="card h-100 shadow-sm">

          <% if event.image_url.present? %>
            <img src="<%= event.image_url %>" class="card-img-top" alt="<%= event.title %>">
          <% else %>
            <img src="https://via.placeholder.com/600x300?text=No+Image" class="card-img-top" alt="No image">
          <% end %>

          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= event.title %></h5>

            <% if event.description.present? %>
              <p class="card-text text-muted"><%= truncate(strip_tags(event.description), length: 120) %></p>
            <% end %>

            <% if event.starts_at.present? %>
              <p class="fw-bold mt-auto">
                <i class="bi bi-calendar-event"></i>
                <%= event.starts_at.strftime("%d %b %Y, %I:%M %p") %>
              </p>
            <% end %>
          </div>

          <div class="card-footer bg-white border-top-0">
            <a href="<%= event.url || '#' %>" class="btn btn-primary w-100" target="_blank">
              View Event
            </a>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-4"> 
  <div class="d-flex justify-content-center">
    <%== @pagy.series_nav(:bootstrap) %>
  </div>
</div>
